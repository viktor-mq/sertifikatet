# =============================================================================
# SERTIFIKATET PROJECT - ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env and update with your actual values
# Tech Stack: Flask, MySQL, Redis, Stripe, Email (Norwegian driving theory test app)

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MySQL database connection
# Format: mysql+pymysql://username:password@host:port/database_name
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name

# MySQL connection pool settings (performance optimization)
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=1800

# =============================================================================
# SECURITY & SESSION MANAGEMENT
# =============================================================================
# Flask secret key for sessions, CSRF protection, and security features
# IMPORTANT: Generate a secure random string for production!
SECRET_KEY=your-secret-key-here-change-in-production

# Application debug mode (should be False in production)
DEBUG=False

# =============================================================================
# EMAIL CONFIGURATION - PRIMARY
# =============================================================================
# Used for user notifications, password resets, verification emails
MAIL_SERVER=your-mail-server.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=Your App <noreply@example.com>

# =============================================================================
# ADMIN EMAIL CONFIGURATION
# =============================================================================
# Used for admin notifications, error reports, and internal communications
ADMIN_MAIL_SERVER=your-mail-server.com
ADMIN_MAIL_PORT=587
ADMIN_MAIL_USE_TLS=True
ADMIN_MAIL_USE_SSL=False
ADMIN_MAIL_USERNAME=admin@example.com
ADMIN_MAIL_PASSWORD=admin-app-password
ADMIN_MAIL_DEFAULT_SENDER=Your App Support <admin@example.com>

# Admin security settings
ADMIN_EMAIL_NOTIFICATIONS=True
SUPER_ADMIN_EMAIL=admin@example.com

# Fallback admin emails (comma-separated list)
ADMIN_EMAILS=admin@example.com

# Default admin password for initial setup
ADMIN_PASSWORD=change-this-password

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Stripe keys for payment processing (use test keys for development)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe webhook secret (for handling payment events)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# REDIS CONFIGURATION (CACHING & SESSIONS)
# =============================================================================
# Redis URL for caching and session storage
# Install Redis locally: brew install redis (macOS) or use Docker
REDIS_URL=redis://localhost:6379/0

# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
# Maximum file upload size (500MB for videos/images)
MAX_CONTENT_LENGTH=524288000

# Upload directories
UPLOAD_FOLDER=static
IMAGES_FOLDER=static/images
VIDEOS_FOLDER=static/videos

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Site configuration
SITE_NAME=Your App Name
DOMAIN_NAME=yourdomain.com

# Language and localization
DEFAULT_LANGUAGE=en
TIMEZONE=Europe/Oslo

# =============================================================================
# SECURITY HEADERS & CSRF
# =============================================================================
# Security settings for production
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400

# CSRF protection
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# =============================================================================
# MACHINE LEARNING & ANALYTICS
# =============================================================================
# ML model settings for adaptive learning
ML_MODELS_ENABLED=True
ML_RETRAIN_INTERVAL=24
ML_MIN_DATA_POINTS=100

# Analytics and tracking
ANALYTICS_ENABLED=False
USER_TRACKING_ENABLED=False

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================
# Rate limiting for API endpoints
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_ENABLED=True

# Cache settings
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/2
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_FILE=logs/app.log

# Error monitoring
SENTRY_DSN=
ERROR_EMAIL_ENABLED=True

# =============================================================================
# CELERY (BACKGROUND TASKS)
# =============================================================================
# Celery broker for background tasks (email sending, ML training, etc.)
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/4

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# YouTube API (for video integration)
YOUTUBE_API_KEY=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-specific settings
FLASK_ENV=development
TESTING=False

# Flask server configuration
HOST=127.0.0.1
PORT=5000

# Debug toolbar
DEBUG_TB_ENABLED=False

# Profiling
PROFILE=False

# =============================================================================
# SUBSCRIPTION & PRICING
# =============================================================================
# Pricing configuration (adjust currency as needed)
FREE_TIER_DAILY_QUIZZES=5
FREE_TIER_WEEKLY_EXAMS=2
PREMIUM_MONTHLY_PRICE=149
PRO_MONTHLY_PRICE=249

# Trial periods (days)
PREMIUM_TRIAL_DAYS=7
PRO_TRIAL_DAYS=14