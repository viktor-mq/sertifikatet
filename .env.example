# =============================================================================
# SERTIFIKATET PROJECT - EXAMPLE ENVIRONMENT FILE
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=mysql+pymysql://username:password@host:port/database_name

# =============================================================================
# SECURITY & SESSION MANAGEMENT
# =============================================================================
SECRET_KEY=your-secret-key-here

# =============================================================================
# DEVELOPER AUTHENTICATION
# =============================================================================
DEV_MODE=True
DEV_USERNAME=admin
DEV_PASSWORD=your-dev-password

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
MAIL_SERVER=your-mail-server
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password

# Admin email
ADMIN_MAIL_USERNAME=admin@domain.com
ADMIN_MAIL_PASSWORD=your-admin-email-password
SUPER_ADMIN_EMAIL=admin@domain.com

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
SITE_NAME=sertifikatet
DOMAIN_NAME=sertifikatet.no
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Environment setting - controls SEO indexing
# Values: 'development' | 'staging' | 'production'
ENVIRONMENT=development

# =============================================================================
# GOOGLE ANALYTICS & TRACKING
# =============================================================================
GOOGLE_ANALYTICS_ID=G-353HJJCNYR
GOOGLE_TAG_MANAGER_ID=GTM-M26JWCMT

# =============================================================================
# SEO & SEARCH ENGINE VERIFICATION
# =============================================================================
# Add your Google Search Console verification code here
# Get this from: https://search.google.com/search-console -> Settings -> Ownership verification
GOOGLE_SEARCH_CONSOLE_VERIFICATION=your-google-verification-code-here

# Add your Bing Webmaster Tools verification code here  
# Get this from: https://www.bing.com/webmasters -> Settings -> Verify ownership
BING_WEBMASTER_VERIFICATION=your-bing-verification-code-here

# =============================================================================
# GDPR & COMPLIANCE
# =============================================================================
# Cookie policy version - increment when updating privacy/cookie policies
# Users with older versions will need to re-consent
COOKIE_POLICY_VERSION=1.0
