# Database configuration
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/driving_theory_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Admin password
ADMIN_PASSWORD=creative

# Email configuration (REQUIRED for security)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=Your App <noreply@example.com>

# Admin email configuration (for admin notifications)
ADMIN_MAIL_SERVER=smtp.gmail.com
ADMIN_MAIL_PORT=587
ADMIN_MAIL_USE_TLS=True
ADMIN_MAIL_USERNAME=info@example.com
ADMIN_MAIL_PASSWORD=admin-app-password
ADMIN_MAIL_DEFAULT_SENDER=Your App Support <info@example.com>

# Fallback admin emails (only used if no admin users in database)
ADMIN_EMAILS=admin@example.com

# Application settings
DEBUG=False

# MySQL connection pool settings (optional)
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=1800
